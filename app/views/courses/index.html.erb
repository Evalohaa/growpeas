
<div class="container mx-auto my-4">
  <div class="d-flex align-items-center m-3 mb-0">
    <div class="title">
      <h1>Tous les cours disponibles</h1>
    </div>
  </div>
  <div class="row">
    <% @courses.each do |course| %>
    <div class="col-md-4 my-3">
      <div class="card card-index" style= "background-color: <%= course.activity.category.color  %> ">
        <% if course.photo.attached? %>
        <%= cl_image_tag course.photo.key %>
        <% else %>
        <%= image_tag "hunter.jpg" %>
        <% end %>
        <div class="card-body">
          <h3 class="card-title"><%= course.name %></h3>
          <%= link_to "Voir les dÃ©tails du cours", course_path(course), type: "button", class: "btn btn-light text-decoration-none rounded-pill shadow" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
