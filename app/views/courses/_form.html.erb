<%= simple_form_for(@course) do |f| %>
  <%= f.input :name, label: 'Titre' %>
  <%= f.association :activity, label: 'Activité' %>
<%= f.input :date, as: :date, html5: true %>
  <%= f.input :starting_time, label: 'Horaires' %>
  <%= f.input :duration, label: 'Durée' %>
  <%= f.input :price, label: 'Prix' %>
  <%= f.input :address, label: 'Adresse' %>
  <%= f.input :max_of_attendees, label: 'Nombre de participants maximum' %>
  <%= f.input :description, label: 'Description (min 100 caractères)' %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, 'Enregistrer', class: "btn-primary" %>
<% end %>
